<p id="notice"><%= notice %></p>
<div id="search">
<% form_tag books_path, method: :get do %>
  <%= text_field_tag :search_box, params[:search] %>
  <%= submit_tag 'Search', name: nil %>
<% end %>
</div>

<div id="search_result">
<% if @books %>
  <% @books.each do |book| %>
    <p><%= book.title %></p>
  <% end %>
<% end %>
</div>

<h1>My Books</h1>
<table id="mybooks">
  <thead>
    <tr>
      <th>Title</th>
      <th>Author</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @mybooks.each do |book| %>
      <tr>
        <td><%= book.title %></td>
        <td><%= book.author %></td>
        <td><%= link_to 'Show', book %></td>
        <td><%= link_to 'Edit', edit_book_path(book) %></td>
        <td><%= link_to 'Destroy', book, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<h1>My Borrowed Books</h1>
<table id="borrowed_books">
  <thead>
    <tr>
      <th>Title</th>
      <th>Author</th>
    </tr>
  </thead>

  <tbody>
    <% @borrowed_books.each do |bb| %>
      <tr>
        <td><%= bb.book.title %></td>
        <td><%= bb.book.author %></td>
      </tr>
    <% end %>
  </tbody>
</table>





